<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="XP: 50 / 100"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/xpBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/xp_progress_drawable" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Goose -->
            <ImageView
                android:id="@+id/gooseImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginStart="12dp"
                android:adjustViewBounds="true"
                android:contentDescription="Goose"
                android:src="@drawable/goose_happy" />

            <!-- Bubble -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/gooseImage"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/gooseImage"
                android:background="@drawable/dialog_bubble"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/jokeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offline mode - connect for fresh jokes"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <!-- Settings -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_settings"
        android:contentDescription="Settings" />

</FrameLayout>